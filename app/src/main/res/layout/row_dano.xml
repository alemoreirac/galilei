<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
    >

    <TextView
        android:id="@+id/txv_row_TipoDano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>

    <TextView
        android:id="@+id/txv_row_TercoDano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txv_row_TipoDano"
        android:layout_marginLeft="10dp"
        android:text=""/>

    <TextView
        android:id="@+id/txv_row_SetorDano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txv_row_TipoDano"

        android:text=""/>

    <TextView
        android:id="@+id/txv_row_Compatibilidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txv_row_TipoDano"
        android:layout_toRightOf="@id/txv_row_SetorDano"
        android:layout_marginLeft="10dp"
        android:text=""/>

</RelativeLayout>