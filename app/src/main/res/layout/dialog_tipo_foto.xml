        android:layout_marginLeft="50dp"
        />

    <TextView
        android:id="@+id/txv_Opcao_galeria"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/imgv_Opcao_galeria"
