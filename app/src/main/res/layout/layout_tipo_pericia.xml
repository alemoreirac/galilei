<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/gray"
        android:clickable="true"
        android:id="@+id/lly_Salvar"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:id="@+id/imgv_Salvar_Proprietario"
            android:layout_margin="3dp"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/disk" />

        <Button
            android:id="@+id/btn_Salvar_Proprietario"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="15dp"
            android:background="@null"
            android:text="Trânsito"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignBottom="@id/lly_Salvar"
        android:orientation="horizontal"
        android:background="@color/gray"
        android:clickable="true"
        android:layout_toRightOf="@id/lly_Salvar"
        android:layout_marginLeft="10dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_margin="3dp"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:src="@drawable/x" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="15dp"
            android:background="@null"
            android:text="Patrimônio"/>
    </LinearLayout>

</RelativeLayout>