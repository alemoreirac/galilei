<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rltv_activity_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.example.pefoce.peritolocal.LoginActivity">

    <ImageView
        android:id="@+id/imgv_Logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/galilei_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp" />

    <AutoCompleteTextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:inputType="textEmailAddress"
        android:hint="E-mail"
        android:id="@+id/auc_login"
        android:nextFocusForward="@+id/edt_senha"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/imgv_Logo"
        tools:backgroundTint="#c8f7b1" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textSize="16dp"
        android:inputType="textPassword"
        android:id="@+id/edt_senha"
        android:hint="Senha"
        android:layout_marginTop="7dp"
        android:layout_below="@id/auc_login"
        android:layout_alignLeft="@+id/auc_login"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_below="@+id/edt_senha"
        android:layout_marginTop="7dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_login"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/txv_Versao"/>
</RelativeLayout>
