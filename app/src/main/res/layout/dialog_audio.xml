<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="450dp"
    android:layout_height="250dp"
    android:padding="8dp">

    <TextView
        android:id="@+id/txv_dialog_Titulo_Audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Gravador de Áudio"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txv_Gravacao_Path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txv_dialog_Titulo_Audio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Nome do Arquivo: "
        android:textSize="30dp" />


    <LinearLayout
        android:id="@+id/btn_dialog_Stop"
        style="@android:style/Widget.Button"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txv_Gravacao_Path"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:gravity="center">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/stop" />

        <TextView
            android:id="@+id/imgb_Pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STOP"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_dialog_REC"
        style="@android:style/Widget.Button"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/btn_dialog_Stop"
        android:layout_marginRight="10dp"

        android:layout_toLeftOf="@id/btn_dialog_Stop"
        android:gravity="center">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/rec_icon" />

        <TextView
            android:id="@+id/imgb_REC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REC"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_dialog_Play"
        style="@android:style/Widget.Button"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_dialog_Stop"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/btn_dialog_Stop"
        android:gravity="center">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/play" />

        <TextView
            android:id="@+id/imgb_Play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_dialog_Stop_Reproduction"
        style="@android:style/Widget.Button"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_dialog_Stop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/stop" />

        <TextView
            android:id="@+id/imgb_Stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parar Reprodução"
            android:textColor="@android:color/black" />

    </LinearLayout>
