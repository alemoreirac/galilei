<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rltv_Pericia_Vida"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pefoce.peritolocal.ManterPericiaVida">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolbar_vida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_pericia_vida"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <ImageButton
                android:id="@+id/imgb_Sair_Vida"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:background="@drawable/fechar_icon"/>
            <TextView
                android:id="@+id/txv_toolbar_Titulo_Vida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/ms_white"
                android:layout_marginLeft="10dp"
                android:text="Teste"/>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <com.stepstone.stepper.StepperLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/stpl_Vida"
        android:layout_below="@+id/toolbar_vida"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:ms_backButtonText="Anterior"
        app:ms_nextButtonText="PrÃ³ximo"
        app:ms_completeButtonText="Finalizar"
        app:ms_nextButtonColor="@color/ms_black"
        app:ms_backButtonColor="@color/ms_black"
        app:ms_stepperType="dots"
        app:ms_completeButtonColor="@color/colorPrimary">
    </com.stepstone.stepper.StepperLayout>



</RelativeLayout>
